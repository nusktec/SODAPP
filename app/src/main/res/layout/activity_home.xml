<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/mainChat2">


    <RelativeLayout
        android:id="@+id/nested_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:scrollingCache="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
           android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:paddingTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@color/transparent"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seeds Of Destiny"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/favorite" />

            <LinearLayout
                android:visibility="gone"
                android:padding="10dp"
                android:background="#171828"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_upgrade"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="'Seeds Of Destiny Pro\nUPGRADE NOW"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="@color/favorite2"
                android:text="Today's Read"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/daddy"
                        android:id="@+id/image_1"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@color/grey_40"
                        android:foreground="@color/mainChat"
                        android:scaleType="centerCrop" />

                        <LinearLayout
                            android:padding="5dp"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:id="@+id/today_topic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Topic Today Loading"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/favorite" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_medium"
                                android:gravity="center|left"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/today_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Please wait..."
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="@color/favorite" />
                            </LinearLayout>

                        </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/favorite2"
                android:text="Multimedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/mainChat"
                app:cardElevation="2dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_playy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:backgroundTint="@color/favorite"
                    style="@style/TextAppearance.AppCompat.Button"

                    android:textColor="@color/mainChat"
                    android:text="Play Live"/>

                <android.support.v7.widget.AppCompatButton
                    style="@style/TextAppearance.AppCompat.Button"
                    android:id="@+id/btn_readnow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:tint="@android:color/white"
                    android:text="Read Now"
                    android:textStyle="bold"
                    android:textColor="@color/mainChat"
                    app:backgroundTint="@color/pink_800" />

            </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/favorite2"
                android:text="Library / Book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="23dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:src="@drawable/image_11"
                        android:id="@+id/image_20"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/grey_40"
                        android:foreground="#E6000000"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_large">

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SOD Library"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30+ Seeds Saved\nClick to open"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/grey_10" />

                            <ImageView
                                android:layout_width="@dimen/spacing_middle"
                                android:layout_height="@dimen/spacing_middle"
                                android:layout_marginLeft="@dimen/spacing_medium"
                                android:layout_marginRight="@dimen/spacing_medium"
                                android:tint="@color/grey_10"
                                app:srcCompat="@drawable/ic_photo_library" />

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_library"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/spacing_large"
                        android:clickable="true"
                        android:textAllCaps="false"
                        android:textColor="@color/mainChat"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textStyle="bold|italic"
                        android:text="Open Library"
                        app:backgroundTint="@color/grey_800" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/favorite2"
                android:text="Previous Seeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="true"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/mainChat"
                app:cardElevation="2dp">

                <!--List or scroll sod-->
                <fragment android:name="com.nsc.sodapp.SOD_ENGLISH"
                    android:layout_margin="2dp"
                    android:id="@+id/fragment_home"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_weight="1" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>