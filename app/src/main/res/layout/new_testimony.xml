<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_testipanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_back"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:padding="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#ccff0000"
                android:text="Give New Testimony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:maxLength="50"
                android:id="@+id/new_testi_name"
                style="@style/Base.V7.Widget.AppCompat.EditText"
                android:hint="Enter your name"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content" />


            <EditText
                android:maxLength="1000"
                android:id="@+id/new_testi_content"
                style="@style/Base.V7.Widget.AppCompat.EditText"
                android:hint="Type your testimony"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatButton
                android:onClick="submitTEST"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:text="Submit for approval"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/submit_new_testi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/cancel_btn_new"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:text="Cancel"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </ScrollView>


</LinearLayout>