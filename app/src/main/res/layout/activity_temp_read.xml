<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/temp_redbg"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.nsc.sodapp.TempRead">

    <android.support.v7.widget.Toolbar
        app:subtitleTextColor="#fff"
        android:id="@+id/sodtool2"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ToolbarTheme"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_above="@id/footer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tmp_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic Here"
            android:textSize="15dp"
            android:shadowRadius="2"
            android:shadowDx="3"
            android:shadowColor="@color/white_back"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:paddingBottom="10dp"
            android:textSize="12dp"
            android:id="@+id/txt_by_daddy"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:text="SEEDS OF DESTINY - Read"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:visibility="visible"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/tmp_scripture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCRIPTURE"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="5dp"/>

                <WebView
                    android:visibility="gone"
                    android:background="#fff"
                    android:id="@+id/wb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></WebView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#beb4b4"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:padding="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:clickable="true"
                android:onClick="facebook"
                android:layout_marginLeft="20dp"
                android:layout_width="18dp"
                android:layout_height="18dp" android:src="@drawable/facebook"/>

            <View android:layout_width="1dp"
                android:layout_marginLeft="20dp"
                android:background="#fff"
                android:layout_gravity="center"
                android:layout_height="10dp"/>

            <ImageView
                android:clickable="true"
                android:onClick="twitter"
                android:layout_marginLeft="20dp"
                android:layout_width="18dp"
                android:layout_height="18dp" android:src="@drawable/twita"/>

            <View android:layout_width="1dp"
                android:layout_marginLeft="20dp"
                android:background="#fff"
                android:layout_gravity="center"
                android:layout_height="10dp"/>

            <ImageView
                android:clickable="true"
                android:onClick="whatsapp"
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp" android:src="@drawable/whatsap"/>

            <View android:layout_width="1dp"
                android:layout_marginLeft="20dp"
                android:background="#fff"
                android:layout_gravity="center"
                android:layout_height="10dp"/>

            <TextView
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/bottom_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="12dp"
                android:textColor="#fff"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
